# This file is used to unify and minimize code style difference
# between editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.py, *.rst, *.html, *.conf, *yml}]
indent_style = space
indent_size = 4

[*.md]
indent_size = 4
